# Slack設定
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# APIキー（必要な場合）
# DEV_TO_API_KEY=your_dev_to_api_key

# 実行設定
ARTICLES_PER_DAY=5
MINIMUM_SCORE=50
RUN_HOUR=9

# ファクトチェック設定
FACTCHECK_MIN_SOURCES=1          # 最低限必要な関連記事数（デフォルト: 1）
FACTCHECK_MIN_DEV_TO=0           # dev.toの最低記事数（デフォルト: 0）
FACTCHECK_MIN_MEDIUM=0           # Mediumの最低記事数（デフォルト: 0）
FACTCHECK_CONFIDENCE_THRESHOLD=0.5  # 信頼度閾値（0.0-1.0、デフォルト: 0.5）