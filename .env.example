########################################
# AI News Feeder Environment Template  #
########################################

# Slack
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#ai-news

# Summarization (Claude CLI)
ENABLE_SUMMARIZATION=true
CLAUDE_CLI_PATH=claude
SUMMARIZATION_TIMEOUT=120
CLAUDE_MIN_REQUEST_INTERVAL_SECONDS=5.0
CLAUDE_MAX_PROMPT_CHARS=4000
# Optional: set when running under cron to avoid macOS Keychain access issues
# ANTHROPIC_API_KEY=your_anthropic_api_key

# Reddit API (optional)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=ai-news-feeder/1.3.0
REDDIT_SCORE_THRESHOLD=40

# GitHub API (optional)
GITHUB_ACCESS_TOKEN=your_github_personal_access_token

# Source toggles
ENABLE_REDDIT=true
ENABLE_GITHUB=true
MAX_ARTICLES_PER_SOURCE=5
NOTIFY_VERIFICATION_LEVEL=all  # verified_only | verified_or_partial | all
TRANSLATE_TITLES=true

# Processing
SCORE_THRESHOLD=50
MAX_ARTICLES_PER_DAY=15

# External sources
#DEV_TO_API_KEY=your_dev_to_api_key
